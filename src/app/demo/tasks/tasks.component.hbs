<link rel="stylesheet" type="text/css" href="/src/app/demo/tasks/tasks.component.css">

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">

    <div class="panel panel-default">
      <div class="panel-heading">
        Tasks
      </div>
      <ul class="list-group">
        {{#each tasks}}
        <li class="list-group-item">

          {{!-- Name --}}
          <div style="display: inline">
            {{name}}
          </div>

          {{!-- Toggle --}}
          <div class="material-switch pull-right">
            <input id="switch-{{id}}" type="checkbox" />
            <label for="switch-{{id}}" class="{{class}}"></label>
          </div>

          {{!-- Info --}}
          <div>
            <small>{{info}}</small>
          </div>
          
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-3">
    </div>
  </div>
</div>