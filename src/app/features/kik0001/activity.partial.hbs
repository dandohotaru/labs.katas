<div class="records panel">

  <div class="header">
    <div class="icons">
      {{#each themes}}
      <span class="tag red" title="{{name}}">
        <i class="fa fa-globe"></i>
      </span>
      {{/each}}
    </div>
    <div class="row">
      <div class="col-md-9 col-sm-9 col-xs-9 info">
        <a href="/activities/{{id}}">
          <span>{{title}}</span>
        </a>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3 type">
        <i class="fa fa-comments" title="{{contract}}"></i>
      </div>
    </div>
  </div>

  <div class="body">

    {{!-- More --}}
    <div class="row">
      <div class="col-md-10">
        {{!-- commands --}}
      </div>
      <div class="col-md-2 text-right">
        <a class="more" href="#more-activity-{{id}}" data-toggle="collapse" aria-expanded="false">
          <i class="fa fa-lg fa-caret-down" title="More details"></i>
        </a>
      </div>
    </div>

    {{!-- Extra --}}
    <div class="row">
      <div class="col-md-12">
        <div class="collapse" id="more-activity-{{id}}">
          <ul class="list-group">
            <li class="list-group-item">
              <strong>Description: </strong>
              {{description}}
            </li>
            <li class="list-group-item">
              <strong>Type: </strong>
              {{type}}
            </li>
            <li class="list-group-item">
              <strong>Opinion: </strong>
              <small>{{opinion.folder}} - </small>{{opinion.title}}
            </li>
            <li class="list-group-item">
              <strong>Representative: </strong>
              {{representative.firstName}} {{representative.lastName}}
            </li>
            <li class="list-group-item">
              <div style="display: flex">
                <div style="flex: 0 0 10%">
                  <strong>Commissions: </strong>
                </div>
                <div style="flex: 1">
                  {{#each commissions}}
                  <section>
                    <small>{{abbreviation}} -</small>
                    {{short}}
                  </section>
                  {{/each}}
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>

    {{!-- Notes --}}
    <div class="row">
      <div class="col-md-12">
        <div class="notes">
          {{!-- todo --}}
        </div>
      </div>
    </div>
    
  </div>

</div>