<link rel="stylesheet" type="text/css" href="/src/app/sample/custom.css"> {{#each pets}}
<div class="pet">

  {{!-- Left --}}
  <div class="photo-column">
    <img src="{{photo}}">
  </div>

  {{!-- Right --}}
  <div class="info-column">
    <h3>
      {{name}}
      <span class="species">({{species}})</span>
    </h3>
    <p>
      Age: {{calculateAge birthYear}}
    </p>

    <h4 class="headline-bar">
      Favorite Foods
    </h4>

    {{#if favFoods}}
    <ul class="favorite-foods">
      {{#each favFoods}}
      <li>{{{this}}}</li>
      {{/each}}
    </ul>
    {{/if}} 
    
    {{#unless favFoods}}
    <small>To be revisited</small>
    {{/unless}}

  </div>
</div>
{{/each}}